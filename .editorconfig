# Editor configuration file, for documentation visit: https://editorconfig.org/
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
tab_width = 2
indent_size = 2
indent_style = space
insert_final_newline = false

[*.{py, pyx, pxd, bzl}]
indent_size = 4
tab_width = 4
insert_final_newline = true

[*{CMakeLists.txt, .cmake}]
indent_size = 4
max_line_length = 100

[Makefile]
indent_size = 4
tab_width = 4
indent_style = tab